<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title: </label>
        <input class="form-control" type="text" id="title" name="campground[title]" value="<%=camp.title%>" required>
        <div class="invalid-feedback">That is not a valid edit!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">location: </label>
        <input class="form-control" type="text" id="location" name="campground[location]" placeholder="City, State" value="<%=camp.location%>" required>
        <div class="invalid-feedback">That is not a valid edit!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Campground Price: </label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input type="text" id="price" name="campground[price]" class="form-control" aria-label="price" placeholder="0.00" value="<%=camp.price%>" required>
          <div class="invalid-feedback">That is not a valid edit!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description: </label>
        <textarea class="form-control" type="text" id="description" name="campground[description]" placeholder="" required><%=camp.description%></textarea>
        <div class="invalid-feedback">That is not a valid edit!</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Add more images</label>
        <input class="form-control" type="file" name="campground[image]" id="image" multiple>
      </div>
      <!-- <div class="mb-3">
        <input type="file" name="campground[image]" id="image" multiple>
      </div> -->
      <div class="mb-3">
        <% camp.images.forEach(function(img, i){ %>
        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
        <div class="form-check-inline">
          <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
          <label for="image-<%= i %>">Delete?</label>
        </div>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Submit Changes</button>
      </div>
    </form>

    <footer>
      <a href="/campgrounds/<%= camp._id%>" class="btn btn-warning">Cancel</a>
    </footer>
  </div>
</div>